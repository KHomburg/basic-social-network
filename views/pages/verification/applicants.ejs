                                <a class="uk-link-text" href="/profile/id/<%= user.invitedBy.profile %> "><span uk-icon="icon: chevron-right"></span>Invited by...</a>
                            <%}%>
                            <p class="uk-text-meta uk-margin-remove-top">
                                <form action="/verification/verifyuser/" method="post">
                                    <input type="hidden" name="userId" value="<%= user._id %>">
                                    <button type="submit" class="uk-button uk-button-primary uk-button-small">Bewerber best√§tigen</button>                  
                                </form>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        <% })} %>
    </div>

