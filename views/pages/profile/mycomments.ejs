<% include ../../partials/head %>

<% include ../../partials/header %>
<% include ../../partials/sidebar %>



<body>
    <div class="main">

        <!-- listing comments -->
        <% if(allComments){ allComments.forEach((comment) => { %>
            <%- include('../../partials/components/single-comment-reference', {comment})%>
        <% })} %>

        <!-- Pagination -->
        <% if (pages > 0) { %>
            <ul class="uk-pagination uk-flex-center" uk-margin>
                <% if (current == 1) { %>
                    <li class="disabled"><a>First</a></li>
                <% } else { %>
                    <li><a href="/profile/mycontent/comments/1">First</a></li>
                <% } %>
                <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                <% if (i !== 1) { %>
                    <li class="disabled"><a>...</a></li>
                <% } %>
                <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                    <% if (i == current) { %>
                        <li class="active"><a><%= i %></a></li>
                    <% } else { %>
                        <li><a href="/profile/mycontent/posts/<%= i %>"><%= i %></a></li>
                    <% } %>
                    <% if (i == Number(current) + 4 && i < pages) { %>
                        <li class="disabled"><a>...</a></li>
                    <% } %>
                <% } %>
                <% if (current == pages) { %>
                    <li class="disabled"><a>Last</a></li>
                <% } else { %>
                    <li><a href="/profile/mycontent/posts/<%= pages %>">Last</a></li>
                <% } %>
            </ul>
        <% } %>




    </div>
</body>

