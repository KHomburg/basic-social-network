<% include ../start %>

    <div class="login-form">
        
        <h3>Login</h3>
        <div class="deutschland login"> 
            <hr class="divider__s">
            <hr class="divider__r">
            <hr class="divider__g">
        </div>

        <div class="form-group">
            <form action="/users/login" method="post">
                <div class="uk-margin">
                    <div class="uk-inline login-input">
                        <span class="uk-form-icon" uk-icon="icon: user"></span>
                        <input class="uk-input" id="Email" type="email" name="email" placeholder="Email eingeben" required>
                    </div>
                </div>

                <div class="uk-margin">
                    <div class="uk-inline login-input">
                        <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: lock"></span>
                        <input class="uk-input" id="Passwort" type="password" name="password" placeholder="Passwort eingeben" required>
                    </div>
                </div>
                    <input class="uk-button uk-button-default" type="submit" value="Absenden">
            </form>
            <a class="uk-margin-large-top" href="/users/pwreset">Passwort vergessen?</a>
        </div>
    </div>

<% include ../end %>