<% include ../../partials/head %>

<% include ../../partials/header %>
<% include ../../partials/sidebar %>

<body>
    <div class="main">

        <!-- mopanel navigation buttons-->
        <div class="uk-button-group uk-margin uk-margin-top uk-flex uk-flex-center">
            <a href="/group/modpanel/reportlist/<%=group.name%>" class="uk-button uk-button-default uk-button-small uk-margin-left uk-margin-right uk-background-default">Reported Content</a>
            <a href="/group/modpanel/members/<%=group.name%>"    class="uk-button uk-button-default uk-button-small uk-margin-left uk-margin-right uk-background-default">Members</a>
            <a href="/group/modpanel/moderators/<%=group.name%>" class="uk-button uk-button-default uk-button-small uk-margin-left uk-margin-right uk-background-default">Moderators</a>
            <a href="/group/modpanel/leavemod/<%=group.name%>" class="uk-button uk-button-primary uk-button-small uk-margin-left uk-margin-right">Leave as Mod</a>
        </div>

        <% if (modCount>1){%>
        <div class="uk-margin uk-margin-top uk-flex uk-flex-center">
            <form action="/group/mod/leavemod/<%=currentUserProfile._id%>" method="post">
                <div class="uk-margin-top" style="display:none">
                    <input type="hidden" name="groupID" value= "<%=group._id %>"></br>
                </div>
                <input class="uk-button uk-button-primary uk-button-small uk-margin-left uk-margin-right" type="submit" value="Leave Mod Status for this Group">
            </form>
        </div>
        <%}else{%>
            <div class="uk-margin uk-margin-top uk-flex uk-flex-center">
                <h3 style="text-align: center">You cannot leave Mod Status because you are the only Moderator of this group <h3>
            </div>
        <%}%>

    </main>
</body>





